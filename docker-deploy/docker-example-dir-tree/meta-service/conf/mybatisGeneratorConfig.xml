<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="jdbc.properties"/>
    <!-- database driver-->
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"/>
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>

        <commentGenerator>
            <!-- whether to suppress generating date info -->
            <property name="suppressDate" value="true"/>
            <!-- whether to supress generatine comments -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!-- database connection info -->
        <jdbcConnection driverClass="${jdbc.driver.classname}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}">
        </jdbcConnection>
        <javaTypeResolver type="org.mybatis.generator.internal.types.JavaTypeResolverDefaultImpl">
            <!-- This property is used to specify whether MyBatis Generator should
                force the use from java.math.BigDecimal for DECIMAL and NUMERIC fields, -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- generated model package and location -->
        <javaModelGenerator targetPackage="com.webank.ai.eggroll.common.dao.generated.model"
                            targetProject="${target.project}/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
            <property name="javaFileEncoding" value="UTF-8"/>
            <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
            <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>
            <property name="constructorBased" value="false"/>
            <property name="immutable" value="false"/>
        </javaModelGenerator>
        <!-- generated mapping package and location -->
        <sqlMapGenerator targetPackage="com.webank.ai.eggroll.framework.meta.service.dao.generated.mapper"
                         targetProject="${target.project}/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </sqlMapGenerator>
        <!-- generated DAO package and locations -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.webank.ai.eggroll.framework.meta.service.dao.generated.mapper"
                             targetProject="${target.project}/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaClientGenerator>

        <!-- tables to generate -->
        <table schema="eggroll_meta" tableName="dtable" enableCountByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="table_id" sqlStatement="JDBC" identity="true"/>
        </table>

        <table schema="eggroll_meta" tableName="fragment" enableCountByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="fragment_id" sqlStatement="JDBC" identity="true"/>
        </table>

        <table schema="eggroll_meta" tableName="node" enableCountByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="node_id" sqlStatement="JDBC" identity="true"/>
        </table>

        <table schema="eggroll_meta" tableName="task" enableCountByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="task_id" sqlStatement="JDBC" identity="true"/>
        </table>

        <table schema="eggroll_meta" tableName="result" enableCountByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="result_id" sqlStatement="JDBC" identity="true"/>
        </table>

    </context>
</generatorConfiguration>